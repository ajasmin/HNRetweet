<web-app>
	<servlet>
		<servlet-name>HNRetweet</servlet-name>
		<servlet-class>HNRetweet.servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HNRetweet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<url-pattern>/cron/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
